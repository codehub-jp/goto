<% if test_users.any? %>
    <ul class="list-unstyled">
        <% test_users.each do |test_user| %>
        <li class="media">
            <img class="mr-2 rounded" src="<%= gravatar_url(test_user, { size: 50 }) %>" alt="">
            <div class="media-body">
            <div>
                <%= test_user.name %>
            </div>
            <div>
                <p><%= link_to 'プロフィールを確認する', test_user_path(test_user) %></p>
            </div>
            </div>
        </li>
        <% end %>
    </ul>
    <%= paginate test_users %>
<% end %>