<header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="/">GoTo!</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <% if logged_in? %>
                <li class="nav-item"><%= link_to 'TestUsers', test_users_path, class: 'nav-link' %></li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= test_current_user.name %></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li class="dropdown-item"><%= link_to 'プロフィール', test_user_path(test_current_user) %></li>
                        <li class="dropdown-divider"></li>
                        <li class="dropdown-item">
                            <%= form_tag logout_path, method: :delete do %>
                                <%= submit_tag "ログアウト" %>
                            <% end %>
                        </li>
                    </ul>
                </li>
            <% else %>
                <li class="nav-item"><%= link_to '新規登録', signup_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
            <% end %>
        </ul>
        </div>
    </nav>
</header>